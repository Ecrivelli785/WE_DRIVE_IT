<div class="container-fluid">
  <div class="d-flex-space-between">
    <h1>Hola <%= current_user.full_name %>!</h1>
  </div>
  <div class="row">
    <div class="col-md-6 col-sm-12">
      <div class="my-rides">
        <h4><strong>Viajes pendientes</strong></h4>
        <div class="cards">
          <% @myrides.each do |ride| %>
            <div class="card text-white bg-primary">
              <div class="card-body">
                <h5><strong>Tienes un viaje pendiente</strong></h5>
                <p class="card-text"><%= ride.steps.first.address %></p>
                <strong><p class="card-text"><%= ride.start_time.strftime("%b %e, %l:%M %p") %></p></strong>
                <p class="card-text"></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="my-earnings w-100">
        <img src="https://support.content.office.net/es-es/media/5f8252c4-09fd-40a1-ae03-1d498f9dedfd.png"  alt="">
      </div>
    </div>
    <div class="col-md-6 col-sm-12">
      <h4 class="text-center"><strong>Viajes Disponibles</strong></h4>
      <div class="cards mb-1">
        <% @rides.each do |ride| %>
          <div class="card shadow-sm bg-white rounded" data-ride="<%= ride.id %>" >
            <div class="card-body">
              <h5 class="card-title"><%= ride.user.full_name %></h5>
              <h6 style="color:blue"><strong>Costo estimado: $<%=ride.estimated_price%></strong></h6>
              <h6><strong>Desde</strong></h6>
              <span class="card-text"><%= ride.steps.first.address %></span>
              <h6><strong>Hasta</strong></h6>
              <span class="card-text"><%= ride.steps.last.address %></span>
              <!-- Button trigger modal -->
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ride<%= ride.id %>">
                Viaje Pendiente
              </button>

              <!-- Modal -->
              <div class="modal fade" id="ride<%= ride.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <%= link_to "Tomar viaje", ride_path(ride), method: :patch, remote: :true  %>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                      <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>
        <% end %>
      </div>
       <div class="card">
       </div>
    </div>
  </div>
</div>
