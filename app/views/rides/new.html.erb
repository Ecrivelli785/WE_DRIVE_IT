<%= simple_form_for @ride do |m| %>
  <div class="container-fluid px-0">
    <div class="row no-gutters position-relative">
        <div class="col-md-8 order-md-last">
          <div
           id="map"
           style="width: 100%;
           height: 100vh;"
           data-markers="<%= @markers.to_json %>"
           data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
          ></div>
        </div>
        <div style="position: absolute; bottom: 30px; right: 30px;">
          <%= m.button :submit, value:"Pedir Chofer", class: "btn btn-success float-left" %>
        </div>
        <div class="col-md-4 order-md-first" style="background-color:white" >
          <div class="form-first"  style="background-color:black">
          <h3 align="center" style="color:white"><strong>Datos de tu viaje</strong></h3>
            <div class="background-color-black container mx-3 mt-3 pb-4">
              <%= m.hidden_field :service_type_id, value: @ride.service_type.id %>
              <%= m.simple_fields_for :steps do |f| %>
              <div class="active-dark-4 my-2 mx-3">
                <%= f.input :address, placeholder: 'Punto de partida', label: false, class: "form-control", id:"ride_address"%>
                <%= f.hidden_field :order, value:f.object.order %>
              </div>
              <% end %>
            </div>
            </div>
            <div class="form-white" style="background-color:white" >
              <div class="d-flex flex-row justify-content-center mx-4">
                <div class="active-dark-4 my-4 mx-5">
                  <input class="form-control" type="text" placeholder="N° depto/lote" aria-label="Punto de partida">
                </div>
              </div>
              <div class="d-flex flex-row justify-content-between mx-3 border mb-3">
                <div class="active-dark-4 my-2 mx-3">
                  <%= m.input :start_time, as: :string, required: false, input_html: {class: "datepicker"} %>
                </div>
                <div class="active-dark-4 my-2 mx-3">
                  <%= m.input :end_time,  as: :string, required: false, input_html: {class: "datepicker"} %>
                </div>
              </div>

              <div class="form-group my-2 mx-4">
                <%= m.input :content, placeholder: 'Añade información relevante para tu chofer', label: false, class: "form-control", id:"exampleFormControlTextarea1", rows:"3" %>
              </div>
            </div>
        </div>
    </div>
  </div>
<% end %>



