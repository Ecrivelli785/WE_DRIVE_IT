<div class="banner pt-5" id="banner_new_user" style= "background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1494233892892-84542a694e72?ixlib=rb-1.2.1&auto=format&fit=crop&w=701&q=80); background-size: cover;">

  <div class="container log-in-form col-md-6 col-sm-12 d-flex text-align-center flex-column justify-content-center">
    <div class="text-center py-3">
      <h2>Log in</h2>
    </div>
    <div class="pb-3">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <div class="mb-5">
          <%= f.input :email,
          required: false,
          autofocus: true,
          input_html: { autocomplete: "email" } %>
        </div>
        <div class="mb-2">
          <%= f.input :password,
          required: false,
          input_html: { autocomplete: "current-password" } %>
        </div>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>
    <div class="aditional-actions text-center pb-3">
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
      </div>
      <% end %>
      <div class="ghghh">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

</div>
