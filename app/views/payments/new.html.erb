<div class="banner " style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1454057093394-cf67bae1d3cf?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80); background-size: cover;">

  <div class="container" style="min-height: 90vh;">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6 my-5">
        <div class="card text-center" style="background: rgba(200,200,200,0.8)">
          <div class="card-header">
            <strong> TU VIAJE HA FINALIZADO</strong>
          </div>
          <div class="card-body">
            <h5 class="card-title">Resumen:</h5>
            <p class="card-text">Inicio: <%=@ride.start_time.strftime('%b %e, %l:%M %p') %></p>
            <p class="card-text">Final: <%=@ride.end_time.strftime('%b %e, %l:%M %p') %></p>
            <p class="card-text">Total horas: <%=@ride.total_time_ride %></p>
            <p class="card-text text-body"> <strong>Total a pagar: $<%= @ride.estimated_price %> </strong></p>
          </div>
          <div class="card-footer text-muted">
            <form action="<%= ride_payments_url %>" method="POST">
              <script
              src="https://www.mercadopago.com.ar/integrations/v1/web-tokenize-checkout.js"
              data-public-key="TEST-8ef3cdc6-d286-425f-90c1-1298b84e6df5"
              data-transaction-amount= "<%= @ride.estimated_price %>"
              data-customer-id="<%= current_user.mp_customer_id %>"
              data-card-ids="<%= current_user.mp_card_id %>"
              data-button-label="Pagar">
            </script>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
