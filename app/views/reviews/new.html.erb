<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1454057093394-cf67bae1d3cf?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80); background-size: cover;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6 my-2">
        <div class="col-8.col-md-6 text-center shadow-sm p-3 my-2 rounded" style="background: rgba(200,200,200,0.4)">
          <h4 class="font-weight-light mt-1"><strong>CALIFICA A TU CHOFER</strong></h4>
        </div>
        <div class="my-2 shadow-sm p-3 mb-3 rounded" style="background: rgba(200,200,200,0.3)">
          <div class="container text-center my-2">
            <div class="">
              <%= image_tag("feli.jpg", height: '140', width: '140', class:"mx-auto rounded-circle") %>
            </div>
            <div class="mt-4">
              <h2>Felipe Hernandez</h2>
              <h6>Chofer profesional</h6>
              <h6>Buenos Aires, Argentina.</h6>
            </div>
          </div>
        </div>

        <%= simple_form_for [@ride, @review] do |f| %>
          <div class="my-1 shadow-sm p-3 mb-3 rounded" style="background: rgba(200,200,200,0.3)">
            <div class="container text-center my-1">
              <div class="">
                <%= f.input :rating, as: :hidden %>
                <div id="rater"></div>
                <div class="mt-2">
                <%= f.input :content,  input_html: { class: "input_placeholder" }, label: false , placeholder: "Observaciones..", as: :text %>
                </div>
             </div>
           </div>
          </div>
          <%= f.button :submit, "Enviar", class: "btn btn-primary  btn-block" %>
        <% end %>
      <div class="my-4">
        <button type="button" class="btn btn-primary" >NUEVO VIAJE</button>
        <button type="button" class="btn btn-secondary" >SALIR</button>
      </div>
    </div>
  </div>
</div>
</div>
